<%= form_with(model: train, local: true) do |form| %>
  <%= render 'common/errors', resource: train %>

  <div class="field">
    <%= form.label :number, 'Номер' %>
    <%= form.text_field :number, id: :train_number %>
  </div>
  <div class="field">
    <%= form.label :current_station, 'Текущая станция' %>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>
  <div class="field">
    <%= form.label :route, 'Маршрут' %>
    <%= form.collection_select :route_id, Route.all, :id, :name %>
  </div>
  <div class="field">
    <%= form.label :sort, 'Тип сортировки:' %> <br />

    <%= form.label :sort_asc, 'с головы поезда', value: 'true' %>
    <%= form.radio_button :sort, :sort_asc, checked: true %>

    <%= form.label :sort_dsc, 'с хвоста поезда', value: 'false' %>
    <%= form.radio_button :sort, :sort_dsc %><br/>
  </div>
  <div class="actions">
    <%= form.submit "#{ train.new_record? ? 'Создать' : 'Изменить'}" %>
  </div>
<% end %>
