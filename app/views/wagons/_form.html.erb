<%= form_with(model: wagon.becomes(Wagon), local: true) do |form| %>
  <%= render 'common/errors', resource: wagon %>

  <div class="field">
    <%= form.label :type, 'Тип вагона' %>
    <%= form.collection_select :type, Wagon.types, :first, :last %>
  </div>
  <div class="field">
    <%= form.label :upper_seats, 'Количество верхних мест:' %>
    <%= form.text_field :upper_seats, id: :upper_seats %>
  </div>
  <div class="field">
    <%= form.label :bottom_seats, 'Количество нижних мест:' %>
    <%= form.text_field :bottom_seats, id: :bottom_seats %>
  </div>
  <div class="field">
    <%= form.label :side_top_seats, 'Количество боковых, верхних мест:' %>
    <%= form.text_field :side_top_seats, id: :side_top_seats %>
  </div>
  <div class="field">
    <%= form.label :side_bottom_seats, 'Количество боковых, верхних мест:' %>
    <%= form.text_field :side_bottom_seats, id: :side_bottom_seats %>
  </div>
  <div class="field">
    <%= form.label :sitting_seats, 'Количество сидячих мест:' %>
    <%= form.text_field :sitting_seats, id: :sitting_seats %>
  </div>
  <div class="field">
    <%= form.label :train, 'Поезд' %>
    <%= form.collection_select :train_id, Train.all, :id, :number %>
  </div>
  <div class="actions">
    <%= form.submit "#{ wagon.new_record? ? 'Создать' : 'Изменить'}" %>
  </div>
<% end %>
