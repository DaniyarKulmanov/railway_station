<p id="notice"><%= notice %></p>

<p>
  <strong>Номер:</strong>
  <%= @train.number %>
</p>
<p>
  <strong>На станции:</strong>
  <% if @train.current_station.present? %>
    <%= @train.current_station.title %>
  <% else %>
    Не указано
  <% end %>
</p>

<p>
  <%= link_to 'Добавить вагон', new_admin_train_wagon_path(@train) %>
</p>

<p>
<strong>Маршрут:</strong>
  <% if @train.route.present? %>
    <%= @train.route.name %>
  <% else %>
    Маршрут не назначен
  <% end %>
</p>

<p>
<strong>Вагоны:</strong>
  <% if @train.wagons.empty? %>
    Список пуст
  <% else %>
    <ul>
      <% @train.sorted_wagons.each do |wagon| %>
        <ul>
          <li><%= link_to wagon.position, [:admin, wagon] %></li>
        </ul>
      <% end %>
    </ul>
<% end %>
</p>


<%= link_to 'Редактировать', edit_admin_train_path(@train) %> |
<%= link_to 'Назад', admin_trains_path %>
