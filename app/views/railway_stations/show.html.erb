<p id="notice"><%= notice %></p>

<p>
  <strong>Название:</strong>
  <%= @railway_station.title %>
</p>

<p>
  <strong>Поезда:</strong>
  <% if @railway_station.trains.empty? %>
    На станции поездов нет
  <% else %>
    <% @railway_station.trains.each do |train| %>
      <li>
        <%= render 'trains/train', train: train %>
      </li>
    <% end %>
  <% end %>
</p>

<%= link_to 'Редактировать', edit_railway_station_path(@railway_station) %> |
<%= link_to 'Назад', railway_stations_path %>
